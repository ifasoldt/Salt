<% content_for :stylesheets do %>
  <link rel="stylesheet" href="/css/welcome/index.css" />
<% end %>
<div class="frontPageMargin"></div>
<div class="jumbotron">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
    <h2 class="text-center"><i>Meet Someone New...</i></h2>
    <form method="get" action="#" enctype="multipart/form-data">
      <div class="searchContainer">
        <div class="cityContainer">
          <div class="form-group">
            <input type="text" class="form-control" id="location" name="location" placeholder="Find An Event" required />
          </div>
        </div>
        <div class="dateFrom">
          <div class="form-group dateTextContainer">
            <div class="dateTextContainerText">From:</div>
            <input type="text" class="form-control flatpickr" data-date-format="m-d-Y" id="index_date_from" name="starting_date" placeholder="From" data-allow-input=true required />
          </div>
        </div>
        <div class="indexArrowContainer">
          <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
        </div>
        <div class="dateTo">
          <div class="form-group dateTextContainer">
            <div class="dateTextContainerText">To:</div>
            <input type="text" class="form-control flatpickr" data-date-format="m-d-Y" id="index_date_to" name="ending_date" placeholder="To" data-allow-input=true required />
          </div>
        </div>
        <div class="buttonContainer">
          <button type="button" class="btn" id="submitIndexSearch">Search</button>
        </div>
      </div>
      <span id="searchError" class="hiddenError errorIndex">All Fields Need Values</span>
    </form>
  </div>
</div>
<div class="container info_container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <h1>What Is Salt-Up?</h1>
      <h4>Salt-Up is a platform for bringing communities together through free home-cooked meals.</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-4 salt_info text-center">
      <i class="fa fa-search info_img" aria-hidden="true"></i>
      <h3>Search Events</h3>
      <div class="info_text">
        Search local events being hosted by people just like you!
      </div>
    </div>
    <div class="col-xs-12 col-sm-4 salt_info text-center">
      <i class="fa fa-pencil-square-o info_img info_img_pencil" aria-hidden="true"></i>
      <h3>Apply</h3>
      <div class="info_text">
         Submit your event application and get speedy approval.
      </div>
    </div>
    <div class="col-xs-12 col-sm-4 salt_info text-center">
      <i class="fa fa-glass info_img" aria-hidden="true"></i>
      <h3>Bon App√©tit</h3>
      <div class="info_text">
        Enjoy your meal while meeting new people and consider hosting an event yourself!
      </div>
    </div>
  </div>
</div>

<% content_for :scripts do %>
  <script src="/js/welcome.bundle.js"></script>
<% end %>
