<% content_for :stylesheets do %>
  <link rel="stylesheet" href="/css/random/password.css" />
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
      <div class="center-block">
        <h2 class="text-center">Enter Your New Password Below</h2>
        <form method="post" action="#" id="changePassword" enctype="multipart/form-data">
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" />
            <label for="password">Password Confirmation</label>
            <input type="password" class="form-control" id="passwordConfirmation" name="passwordConfirmation" />
          </div>
        </form>
        <button type="button" class="btn center-block" id="submitPassword">Recover Password</button>
      </div>
    </div>
  </div>
</div>

<% content_for :scripts do %>
  <script src="/js/random/passwordReset.js"></script>
<% end %>
