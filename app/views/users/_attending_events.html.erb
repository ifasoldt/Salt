<a href="/events/<%= event.id %>">
  <div class="conversationContainer">
    <div class="conversationHeader">
      <div class="conversationNameContainer">
        <%= event.title %>
      </div>
      <div class="conversationDateContainer">
        <%= event.formatted_date %> @ <%= event.formatted_time %>
      </div>
    </div>
    <div class="conversationBody">
      <div class="conversationLeftsideContainer">
        <img class="profile_image img-responsive" src="<%= attachment_url(event.images[0], :file, :fill, 400, 400, fallback: "/assets/no_pic.png") %>"  />
      </div>
      <div class="conversationRightsideContainer">
        <%= event.description %>
      </div>
    </div>
  </div>
</a>
